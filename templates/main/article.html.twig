{% extends 'base.html.twig' %}


{% block content %}

<h2>Nos derniers articles </h2>

{% for article in list %}
    <div class="card" style="width: 18rem;">
        <img src="{{ asset('/build/images/' ~ article.image) }}" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{ article.titre }}</h5>
            <p class="card-text">{{ article.preview}}</p>
            <a href="{{ path("article_show", {id:article.id} ) }}" class="btn btn-primary">Go somewhere</a>
        </div>
    </div>



{% endfor %}

{% endblock %}