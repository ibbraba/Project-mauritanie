    {# TODO Resize image to same dimensions #}
    <div id="section" class="index index-articles">

        <h4>Articles à la une</h4>
        <div class="articles-card">
            {% for article in articles %}
            <div class="index-card card" style="width: 33.3%;">
                {% if article.image %}
                <img src="{{ asset('/build/images/' ~ article.image)  }}" class="card-img-top" alt="...">
                {% else %}
                <img src="{{ asset('/build/images/flag.jpg' ) }}" class="card-img-top" alt="drapeau mauritanie">
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title">{{ article.titre }} </h5>
                    <p class="card-text">{{ article.preview }}</p>
                    <a href="{{ path("article_show", {id:article.id} )}}" class="btn btn-light">Lire l'article</a>
                </div>
            </div>




            {% endfor %}

        </div>




        <a class="btn btn-light" href="{{ path('article') }}" class="visit"> > Voir tous les articles</a>

    </div>



    <div class="index index-recits">
