        <ul class="header-ul">
            <a class="col btn btn-dark header-link" href="{{ path("article") }}"> <li class="header-item"> Articles </li> </a>
            <a class="col btn btn-dark header-link" href="{{ path('discover') }}"><li class="header-item"> Découverte </li></a>
            <a class="col btn btn-dark header-link" href="{{ path('recits') }}"><li class="header-item"> Récits </li></a>
            <a class="col btn btn-dark header-link" href="{{ path('culture') }}"><li class="header-item"> Culture </li></a>
{#            <a href="{{ path('histoire') }}"><li class="header-item"> Histoire </li></a>#}

        </ul>

        </nav>

        </header>



        {% endblock %}



        <div class="container-fluid page-container">
            <main id="swup">
            {% block content%}
            {% endblock%}
            </main>
        </div>

        {% block footer%}
        <footer>


            <h4>Zone Mauritanienne</h4>


            <div class="menntions">
                <a href="">Mentions légales</a>
